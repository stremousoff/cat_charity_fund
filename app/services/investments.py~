from datetime import datetime

from app.models.base import Investment


def make_investments(
    target: Investment, sources: list[Investment]
) -> list[Investment]:
    changed_objects = []
    for source in sources:
        investment_amount = min(
            source.full_amount - source.invested_amount,
            target.full_amount - target.invested_amount,
        )
        for _object in (source, target):
            _object.invested_amount += investment_amount
            if _object.full_amount == _object.invested_amount:
                _object.fully_invested = True
                _object.close_date = datetime.now()
        changed_objects.append(source)
        if target.fully_invested:
            break
    return changed_objects
